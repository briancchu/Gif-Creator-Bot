{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "scripts/**/*.mjs",
    "scripts/**/*.js",
    "*.js",
  ]
}
